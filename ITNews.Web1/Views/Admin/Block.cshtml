@model ITNews.Web1.Models.ProfileViewModel

@{
    ViewData["Title"] = "Block";
}

<h2>Block</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Block">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.HiddenFor(x=>x.Id)
            </div>
            <div class="form-group">
                @Html.HiddenFor(x=>x.UserId)
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                @Html.DisplayFor(x=>x.FirstName)
                @*<input asp-for="FirstName" class="form-control" disabled />
                <span asp-validation-for="FirstName" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                @*<input asp-for="LastName" class="form-control" disabled />
        <span asp-validation-for="LastName" class="text-danger"></span>*@
                @Html.DisplayFor(x => x.LastName)
            </div>
            <div class="form-group">
                <label asp-for="User.UserName" class="control-label"></label>
                @Html.DisplayFor(x => x.User.UserName)
                @*<input asp-for="User.UserName" class="form-control" disabled />
        <span asp-validation-for="User.UserName" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                @Html.Label("Block")
                @Html.CheckBoxFor(x => x.User.Blocked)
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

